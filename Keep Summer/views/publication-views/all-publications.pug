extends ../_layout
include ../_mixins/_aside

block container  
    .all-publications.container
        .row
            .col-md-3.col-md-offset-1
                +asides
            .col-md-8
                .row
                    each item in model
                        .col-md-4
                            .publications-container
                                img(src="../../static/images/" + item.image1, alt="image")
                                .caption
                                    .description 
                                        .date #{item.date}
                                            span | 
                                            span.post-by by #{item.publisher} 
                                        h3 #{item.title}
                                        p 
                                            | #{item.text1}
                                            p
                                                a(href="/api/publications/" + item.id , class="btn btn-default",  role="button")  Read more...
                .row
                    .col-md-12.text-right#add
                        a(href="/add-publication" class="btn btn-default btn-block pull-right" role="button") 
                            | Tell About Your Adventure                                           