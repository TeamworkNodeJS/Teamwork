extends ../_layout
block container 
    h1
    .container.contact-form
        .well.well-sm
            form
                .row
                    .col-md-6
                        .form-group
                            label(for="name") Name
                            input#name.form-control(type="text" placeholder="Enter name" required="required")
                        .form-group
                            label(for="email") Email Address
                            .input-group
                                span.input-group-addon
                                    span.glyphicon.glyphicon-envelope
                                input.form-control#email(type="email" placeholder="Enter email" required="required")
                        .form-group
                            label(for="subject") Subject                 
                            select#subject(name="subject" class="form-control" required="required")
                                    option(value="na" selected="") Choose One:
                                    option(value="service") General Customer Service
                                    option(value="suggestions") Suggestions
                                    option(value="product") Product Support
                    .col-md-6
                        .form-group
                            label(for="name") Message
                            textarea(name="message" id="message" class="form-control" rows="9" cols="25" required="required" placeholder="Message")
                    .col-md-12
                        a(href="#/send" type="button" class="btn btn-default pull-right" id="btnContactUs") Send Message
